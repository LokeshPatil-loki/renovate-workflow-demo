{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["renovate-k8s-manifests"],
  "enabledManagers": ["custom.jsonata", "kubernetes"],
  "prHourlyLimit": 50,
  "prConcurrentLimit": 10,
  "recreateWhen": "always",
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/update-images.yaml"],
      "matchManagers": ["custom.jsonata"],
      "groupName": "copy-dynatrace-images",
      "groupSlug": "copy-dynatrace-images"
    },
    {
      "matchManagers": ["kubernetes"],
      "matchPackageNames": ["public.ecr.aws/dynatrace/**"],
      "versioning": "docker",
      "respectLatest": false
    }
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/dynakube-yaml/.*\\.yaml$",
      "dynakube-yaml/DEV/centralus/dynakube-centralus-dev.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        ".github/workflows/update-images.yaml"
      ],
      "matchStrings": [
        "$each(on.workflow_dispatch.inputs, function($v, $k) {{" +
        "\"depName\": \"public.ecr.aws/dynatrace/dynatrace-\" & $lowercase($replace($k, \"_version\", \"\"))," +
        "\"currentValue\": $v.default," +
        "\"depType\": \"github-actions\"" +
        "}})"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
};
